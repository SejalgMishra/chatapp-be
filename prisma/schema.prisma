// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  email    String?
  image    String?   @default("https://res.cloudinary.com/devatchannel/image/upload/v1602752402/avatar/avatar_cugq40.png")
  messages Message[] //opposite relation with message
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  message   String?
  type      type     @default(PRIVATE)
  image     String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId // fields must ne included in model for relation
  isRead    Boolean  @default(false)
  sender    String
  createdAt DateTime @default(now())
}

enum type {
  GROUP
  PRIVATE
}
